<assembly>
	<id>bin</id>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>wsf-spring-${wsf-spring.version}-bin</baseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
	        <directory>../</directory>
			<outputDirectory>/</outputDirectory>
	        <includes>
	            <include>*.txt</include>
				<include>release-notes.html</include>
	        </includes>
	    </fileSet>
		<fileSet>
			<directory>../core/target</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>wsf-spring-${wsf-spring.version}.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../samples/webapp/target</directory>
			<outputDirectory>samples/webapp</outputDirectory>
			<includes>
				<include>wsf-spring-sample-${wsf-spring.version}.war</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>