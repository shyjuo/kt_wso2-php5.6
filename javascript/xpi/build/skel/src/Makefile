DEPTH           = ../../../../..
topsrcdir       = ../../../../..
srcdir          = .
VPATH           = .

axis_topbuilddir= $(AXIS2C_HOME)

include $(DEPTH)/config/autoconf.mk

MODULE		= tungsten
XPIDL_MODULE	= tungsten
LIBRARY_NAME	= tungsten_skel
EXPORT_LIBRARY  = 1
ifneq ($(OS_ARCH),WINNT)
SHORT_LIBNAME	= tungsten_skel
endif
IS_COMPONENT	= 1
MODULE_NAME	= nsTungstenModule
GRE_MODULE	= 1
LIBXUL_LIBRARY	= 1

PACKAGE_FILE = tungsten_skel.pkg


REQUIRES	= xpcom \
		  string \
		  xpconnect \
		  dom \
		  js \
		  content \
		  widget \
		  necko \
		  embedcomponents \
		  xmlextras \
                  plugin \
		  $(NULL)

CPPSRCS		= nsTungstenModule.cpp

FORCE_SHARED_LIB = 1

include $(topsrcdir)/config/config.mk

INCLUDES        += -I$(axis_topbuilddir)/include/axis2-1.0 \
                   $(NULL)

SHARED_LIBRARY_LIBS = \
	../../../base/util/src/$(LIB_PREFIX)tungstenutil_s.$(LIB_SUFFIX) \
	../../../base/soap/src/$(LIB_PREFIX)tungstensoap_s.$(LIB_SUFFIX) \
	$(NULL)

LOCAL_INCLUDES	= \
		-I$(srcdir)/../../../base/soap/src \
		-I$(srcdir)/../../../base/util/src \
		$(NULL)

ifneq ($(OS_ARCH),WINNT)

AXIS2C_LIBS=   \
        -L$(axis_topbuilddir)/lib \
		-laxis2_engine \
        -laxis2_minizip \
        -laxutil \
        -laxis2_parser \
        -laxis2_axiom \
        -laxis2_http_receiver \
        -laxis2_http_sender \
        $(NULL)
INTE_LIBS = \
             -lxml2 \
             -lz \
	     -lplds4 \
	     -lplc4 \
	     -lnspr4 \
             $(NULL)


else

AXIS2C_LIBS=   \
        /LIBPATH:$(axis_topbuilddir)/lib \
        axiom.lib \
        axis2_engine.lib \
        axis2_http_receiver.lib \
        axis2_http_sender.lib \
        axis2_wsdl.lib \
        axis2_parser.lib \
        axis2_util.lib \
        $(NULL)


INTE_LIBS = \
        /LIBPATH:$(LIB_PATHS) \
        libxml2_a.lib \
        $(NULL)

endif #WINNT

EXTRA_LIBS = $(AXIS2C_LIBS) \
             $(INTE_LIBS) \
             $(NULL)


EXTRA_DSO_LDOPTS += \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)
		#$(XPCOM_FROZEN_LDOPTS) \
                $(NSPR_LIBS) \
		$(LIBS_DIR) \
		$(ZLIB_LIBS) \
		$(MOZ_JS_LIBS) \
		$(NULL)


EXTRA_DSO_LDOPTS += $(MOZ_COMPONENT_LIBS)

install:: $(TARGETS)

include $(topsrcdir)/config/rules.mk

